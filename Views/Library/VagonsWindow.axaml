<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TrackFlow.ViewModels.Library;assembly=TrackFlow"
        xmlns:conv="clr-namespace:TrackFlow.Converters;assembly=TrackFlow"
        x:Class="TrackFlow.Views.Library.VagonsWindow"
        x:DataType="vm:VagonsWindowViewModel"
        x:Name="Root"
        Title="Editor vozňov"
        Width="1200" Height="720"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Window.Styles>
        <Style Selector="DataGrid.vagonGrid:disabled">
            <Setter Property="Opacity" Value="0.65"/>
        </Style>
    </Window.Styles>

    <Window.Resources>
        <conv:IconNameToPathConverter x:Key="IconNameToPathConverter" />
        <conv:StringNotNullOrWhiteSpaceToBoolConverter x:Key="StringNotNullOrWhiteSpaceToBoolConverter" />
    </Window.Resources>

    <Grid RowDefinitions="*,Auto" Margin="10">
        <Grid Grid.Row="0" ColumnDefinitions="360,5,*" RowDefinitions="*">

            <Border Grid.Column="0" BorderBrush="#C8C8C8" BorderThickness="1">
                <DataGrid Classes="vagonGrid"
                          ItemsSource="{Binding Vagons}"
                          SelectedItem="{Binding Selected, Mode=TwoWay}"
                          IsEnabled="{Binding IsGridEnabled}"
                          AutoGenerateColumns="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Názov" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Typ" Binding="{Binding VagonType}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" Background="#E0E0E0"/>

            <Border Grid.Column="2" BorderBrush="#C8C8C8" BorderThickness="1" Padding="12">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*,Auto"
                      ColumnDefinitions="Auto,*,Auto,220"
                      ColumnSpacing="10" RowSpacing="8">

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Názov:"/>
                    <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Popis:"/>
                    <TextBox x:Name="DescriptionBox" Grid.Row="1" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Hmotnosť:"/>
                    <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10">
                        <TextBox x:Name="WeightBox"
                                 Width="100"
                                 HorizontalAlignment="Left"
                                 Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="t"/>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="35,0,0,0" Text="Typ vozňa"/>
                        <ComboBox Grid.Column="3" Width="223" Margin="5,0,0,0"
                                  ItemsSource="{Binding VagonTypes}"
                                  SelectedItem="{Binding VagonType, Mode=TwoWay}" />
                    </Grid>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Dĺžka (m):"/>
                    <Grid Grid.Row="3" Grid.Column="1" ColumnDefinitions="Auto,Auto" ColumnSpacing="10">
                        <TextBox x:Name="LengthBox"
                                 Width="100"
                                 HorizontalAlignment="Left"
                                 Text="{Binding LengthOverBuffers, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="m"/>
                    </Grid>

                    <!-- Kategória umiestnená priamo pod combo "Typ vozňa" v rovnakých stĺpcoch -->
                    <Grid Grid.Row="3" Grid.Column="1" ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10">
                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="145,0,0,0" Text="Kategória"/>
                        <ComboBox Grid.Column="3" Width="223" Margin="5,0,0,0"
                                  ItemsSource="{Binding VagonCategories}"
                                  SelectedItem="{Binding VagonCategory, Mode=TwoWay}" />
                    </Grid>

                    <!-- Typ vozňa moved next to Hmotnosť -->

                    <StackPanel Grid.Row="0" Grid.Column="3" Grid.RowSpan="4" Orientation="Vertical" HorizontalAlignment="Center">
                        <ComboBox Width="200" Height="50"
                                  ItemsSource="{Binding IconComboItems}"
                                  SelectedItem="{Binding SelectedIcon, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Image Source="{Binding FullPath, Converter={StaticResource IconNameToPathConverter}}"
                                               Height="40" Stretch="Uniform"
                                               IsVisible="{Binding FullPath, Converter={StaticResource StringNotNullOrWhiteSpaceToBoolConverter}}"/>
                                        <TextBlock Text="{Binding Name}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   IsVisible="{Binding FullPath, Converter={StaticResource StringNotNullOrWhiteSpaceToBoolConverter}, ConverterParameter=Invert}" />
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
                            Background="#FFF6D6" BorderBrush="#E0C070" BorderThickness="1"
                            CornerRadius="2" Padding="6" MinHeight="34">
                        <StackPanel>
                            <TextBlock Text="{Binding ValidationMessage}" />
                        </StackPanel>
                    </Border>

                    <TabControl Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4">
                        <TabItem Header="Doplňujúce">
                            <TextBlock Margin="10" Text="Doplňujúce údaje o vozni." />
                        </TabItem>
                    </TabControl>

                </Grid>
            </Border>

        </Grid>

        <DockPanel Grid.Row="1" Margin="0,10,0,0" LastChildFill="False">
            <StackPanel Orientation="Horizontal" Spacing="10" DockPanel.Dock="Left">
                <Button Content="Pridať" Command="{Binding AddCommand}" Width="120"/>
                <Button Content="{Binding SaveButtonText}" Command="{Binding SaveChangesCommand}" Width="140"/>
                <Button Content="Zmazať" Command="{Binding DeleteCommand}" Width="120"/>
                <Button Content="Zrušiť" Command="{Binding CancelCommand}" Width="120"/>
            </StackPanel>

            <Button Content="Zavrieť" Command="{Binding CloseCommand}" Width="120" DockPanel.Dock="Right"/>
        </DockPanel>

    </Grid>
</Window>