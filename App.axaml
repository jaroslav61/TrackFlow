<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TrackFlow.App"
             xmlns:local="clr-namespace:TrackFlow"
             xmlns:conv="clr-namespace:TrackFlow.Converters;assembly=TrackFlow"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <conv:IconNameToPathConverter x:Key="IconNameToPathConverter" />
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme/>
        <!-- DataGrid: nutné štýly, inak sa DataGrid nevykreslí -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>
</Application>