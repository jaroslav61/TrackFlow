<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TrackFlow.App"
             xmlns:local="clr-namespace:TrackFlow"
             xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             xmlns:dockfluent="clr-namespace:Dock.Avalonia.Themes.Fluent;assembly=Dock.Avalonia.Themes.Fluent"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme/>
        <dockfluent:DockFluentTheme/>
        <!-- DataGrid: nutné štýly, inak sa DataGrid nevykreslí -->
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

        <Style Selector="dock|DocumentTabStrip">
            <Setter Property="IsVisible" Value="False"/>
            <Setter Property="Height" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
        </Style>

        
    </Application.Styles>
</Application>